---
interface Props {
  content: any; // Astro's Content component
}

const { content: Content } = Astro.props;
---

<div class="prose prose-lg prose-slate max-w-none dark:prose-invert">
  <Content />
</div>

<style>
  /* Enhanced typography styling */
  .prose {
    @apply text-gray-700 dark:text-gray-300;
  }

  /* Headings */
  .prose h1 {
    @apply mb-6 text-4xl font-bold tracking-tight text-gray-900 dark:text-gray-100;
  }

  .prose h2 {
    @apply mb-4 mt-12 text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100;
    @apply border-b border-gray-200 pb-2 dark:border-gray-700;
    scroll-margin-top: 100px;
  }

  .prose h3 {
    @apply mb-3 mt-8 text-2xl font-semibold text-gray-900 dark:text-gray-100;
    scroll-margin-top: 100px;
  }

  .prose h4 {
    @apply mb-2 mt-6 text-xl font-semibold text-gray-900 dark:text-gray-100;
    scroll-margin-top: 100px;
  }

  /* Paragraphs */
  .prose p {
    @apply mb-6 leading-7 text-gray-700 dark:text-gray-300;
  }

  /* Links */
  .prose a {
    @apply font-medium text-blue-600 no-underline dark:text-blue-400;
    @apply hover:text-blue-800 hover:underline dark:hover:text-blue-300;
    @apply transition-colors;
  }

  /* Lists */
  .prose ul,
  .prose ol {
    @apply mb-6 pl-6;
  }

  .prose ul {
    @apply list-disc;
  }

  .prose ol {
    @apply list-decimal;
  }

  .prose li {
    @apply mb-2 text-gray-700 dark:text-gray-300;
  }

  .prose li::marker {
    @apply text-blue-600 dark:text-blue-400;
  }

  /* Code blocks */
  .prose code {
    @apply rounded-md bg-gray-100 px-1.5 py-0.5 font-mono text-sm dark:bg-gray-800;
    @apply text-pink-600 dark:text-pink-400;
    @apply before:content-[''] after:content-[''];
  }

  .prose pre {
    @apply mb-6 mt-4 rounded-lg bg-gray-900 p-4 text-gray-100 dark:bg-gray-950;
    @apply border border-gray-800 dark:border-gray-700;
    @apply overflow-x-auto;
  }

  .prose pre code {
    @apply bg-transparent p-0 text-gray-100 dark:text-gray-200;
    @apply text-sm;
  }

  /* Blockquotes */
  .prose blockquote {
    @apply border-l-4 border-blue-500 dark:border-blue-400;
    @apply bg-blue-50 dark:bg-blue-900/20;
    @apply rounded-r-lg px-4 py-2 italic;
    @apply my-6 text-gray-700 dark:text-gray-300;
  }

  .prose blockquote p {
    @apply mb-0;
  }

  /* Images */
  .prose img {
    @apply my-8 rounded-lg shadow-lg;
    @apply border border-gray-200 dark:border-gray-700;
    @apply h-auto max-w-full;
    content-visibility: auto;
  }

  /* Optimize image loading */
  .prose picture {
    @apply block;
  }

  .prose picture img {
    @apply w-full;
  }

  /* Tables */
  .prose table {
    @apply my-6 w-full border-collapse;
  }

  .prose thead {
    @apply bg-gray-100 dark:bg-gray-800;
  }

  .prose th {
    @apply border border-gray-300 px-4 py-2 text-left font-semibold dark:border-gray-700;
    @apply text-gray-900 dark:text-gray-100;
  }

  .prose td {
    @apply border border-gray-300 px-4 py-2 dark:border-gray-700;
    @apply text-gray-700 dark:text-gray-300;
  }

  .prose tr:nth-child(even) {
    @apply bg-gray-50 dark:bg-gray-900/50;
  }

  /* Horizontal rules */
  .prose hr {
    @apply my-8 border-gray-300 dark:border-gray-700;
  }

  /* Strong and emphasis */
  .prose strong {
    @apply font-semibold text-gray-900 dark:text-gray-100;
  }

  .prose em {
    @apply italic;
  }

  /* First paragraph styling */
  .prose > p:first-of-type {
    @apply text-lg text-gray-800 dark:text-gray-200;
  }
</style>
