---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslations, getLocaleFromPath } from '../../utils/i18n';
import MdToDocxConverterContent from '../../components/others/MdToDocxConverter/MdToDocxConverterContent.astro';

const currentPath = Astro.url.pathname;
const locale = getLocaleFromPath(currentPath);
const t = getTranslations(locale);
---

<BaseLayout title={t.mdToDocxConverter.title} description={t.mdToDocxConverter.description}>
  <div class="container mx-auto px-4 py-8">
    <div class="mx-auto max-w-5xl">
      <div class="mb-6">
        <h1 class="mb-2 text-3xl font-bold text-gray-900 dark:text-gray-100">
          {t.mdToDocxConverter.title}
        </h1>
        <p class="text-gray-600 dark:text-gray-400">{t.mdToDocxConverter.description}</p>
      </div>

      <MdToDocxConverterContent locale={locale} t={t} />
    </div>
  </div>
</BaseLayout>
