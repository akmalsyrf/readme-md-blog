---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getTranslations, getLocaleFromPath, getLocalizedPath } from '../../../utils/i18n';
import { getCollection } from 'astro:content';
import Breadcrumb from '../../../components/common/Breadcrumb.astro';
import GiscusReactionCount from '../../../components/common/GiscusReactionCount.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('notes');

  // Get all unique tags from English posts (only published)
  const enPosts = allPosts.filter((post) => post.data.isPublished && post.slug.endsWith('/en'));
  const enTagMap = new Set<string>();

  enPosts.forEach((post) => {
    if (post.data.tags && post.data.tags.length > 0) {
      post.data.tags.forEach((tag) => enTagMap.add(tag));
    }
  });

  return Array.from(enTagMap).map((tag) => ({
    params: { tag },
    props: { locale: 'en' as const },
  }));
}

const { tag } = Astro.params;
const currentPath = Astro.url.pathname;
const locale = getLocaleFromPath(currentPath);
const t = getTranslations(locale);

// Get posts with this tag (only published)
const allPosts = await getCollection('notes');
const posts = allPosts
  .filter((post) => {
    const slug = post.slug;
    return post.data.isPublished && slug.endsWith('/en') && post.data.tags?.includes(tag!);
  })
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<BaseLayout title={`${tag} - ${t.tags.title}`} description={`Posts tagged with ${tag}`}>
  <div class="container mx-auto px-4 py-12">
    <div class="mx-auto max-w-4xl">
      <Breadcrumb
        locale={locale}
        items={[
          { label: t.breadcrumb.home, href: '/' },
          { label: t.breadcrumb.tags, href: '/tags' },
          { label: tag! },
        ]}
      />

      <h1 class="mb-8 text-4xl font-bold">
        {t.tags.title}: <span class="text-blue-600 dark:text-blue-400">{tag}</span>
      </h1>

      {
        posts.length > 0 ? (
          <div class="space-y-6">
            {posts.map((post) => {
              const postSlug = post.slug.replace(/\/en$/, '');
              const postPath = getLocalizedPath(`/notes/${postSlug}`, locale);

              return (
                <article class="rounded-lg border border-gray-200 bg-white p-6 transition-shadow hover:shadow-lg dark:border-gray-800 dark:bg-gray-800">
                  <h2 class="mb-2 text-2xl font-semibold">
                    <a
                      href={postPath}
                      class="text-gray-900 hover:text-blue-600 dark:text-gray-100 dark:hover:text-blue-400"
                    >
                      {post.data.title}
                    </a>
                  </h2>
                  <p class="mb-4 text-gray-600 dark:text-gray-400">{post.data.description}</p>
                  <div class="mb-4 flex items-center gap-4 text-sm text-gray-500 dark:text-gray-500">
                    <time>
                      {post.data.pubDate.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </time>
                    <span>•</span>
                    <span>{post.data.author}</span>
                    <span>•</span>
                    <GiscusReactionCount pathname={postPath} locale={locale} />
                  </div>
                  <a
                    href={postPath}
                    class="text-sm font-medium text-blue-600 hover:underline dark:text-blue-400"
                  >
                    {t.notes.readMore} →
                  </a>
                </article>
              );
            })}
          </div>
        ) : (
          <p class="text-gray-600 dark:text-gray-400">{t.tags.noPosts}</p>
        )
      }
    </div>
  </div>
</BaseLayout>
