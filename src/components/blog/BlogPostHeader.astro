---
import { getTranslations, getLocalizedPath, type Locale } from '../../utils/i18n';
import { calculateReadingTime, formatReadingTime } from '../../utils/readingTime';
import GiscusReactionCount from '../common/GiscusReactionCount.astro';
import { socialLinks } from '../../config/social';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'notes'>;
  locale: Locale;
  isReadingTimeVisible?: boolean;
  showGiscusStats?: boolean;
}

const { post, locale, isReadingTimeVisible = true, showGiscusStats = true } = Astro.props;
const t = getTranslations(locale);
const readingTime = calculateReadingTime(post.body);
const readingTimeText =
  readingTime < 1
    ? t.notes.underOneMinute
    : `${formatReadingTime(readingTime, locale)} ${t.notes.readingTime}`;
const dateLocale = locale === 'id' ? 'id-ID' : 'en-US';

// Get post path for Giscus stats
const postSlug = post.slug.replace(/\/id$|\/en$/, '');
const postPath = getLocalizedPath(`/notes/${postSlug}`, locale);

// GitHub profile for author section
const githubLink = socialLinks.find((link) => link.icon === 'github');
const githubUrl = githubLink?.url ?? '#';
const githubUsername =
  githubUrl !== '#' ? githubUrl.replace(/^https?:\/\/github\.com\/?/i, '').replace(/\/$/, '') : '';
const avatarUrl = githubUsername ? `https://github.com/${githubUsername}.png` : '';
---

<header class="mb-8">
  <h1 class="mb-4 text-4xl font-bold">{post.data.title}</h1>
  <div class="mb-4 flex flex-wrap items-center gap-4 text-gray-600 dark:text-gray-400">
    <time>
      {t.notes.publishedOn}{' '}
      {
        post.data.pubDate.toLocaleDateString(dateLocale, {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })
      }
    </time>
    <span>•</span>
    <a
      href={githubUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-2 transition-opacity hover:opacity-80"
      aria-label={`${post.data.author} on GitHub`}
    >
      {
        avatarUrl && (
          <img src={avatarUrl} alt="" width="28" height="28" class="rounded-full" loading="lazy" />
        )
      }
      <span class="font-medium">{post.data.author}</span>
    </a>
    {
      isReadingTimeVisible && (
        <>
          <span>•</span>
          <span>{readingTimeText}</span>
        </>
      )
    }
    {
      showGiscusStats && (
        <>
          <span>•</span>
          <GiscusReactionCount pathname={postPath} locale={locale} />
        </>
      )
    }
  </div>
  {
    post.data.tags && post.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {post.data.tags.map((tag: string) => (
          <span class="rounded-full bg-blue-100 px-3 py-1 text-sm text-blue-800 dark:bg-blue-900 dark:text-blue-200">
            {tag}
          </span>
        ))}
      </div>
    )
  }
</header>
