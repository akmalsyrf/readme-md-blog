---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslations, getLocaleFromPath } from '../../utils/i18n';
import CompoundInterestCalculatorContent from '../../components/others/CompoundInterestCalculator/CompoundInterestCalculatorContent.astro';

const currentPath = Astro.url.pathname;
const locale = getLocaleFromPath(currentPath);
const t = getTranslations(locale);
---

<BaseLayout
  title={t.compoundInterestCalculator.title}
  description={t.compoundInterestCalculator.description}
>
  <div class="container mx-auto px-4 py-8">
    <div class="mx-auto max-w-5xl">
      <div class="mb-6">
        <h1 class="mb-2 text-3xl font-bold text-gray-900 dark:text-gray-100">
          {t.compoundInterestCalculator.title}
        </h1>
        <p class="text-gray-600 dark:text-gray-400">{t.compoundInterestCalculator.description}</p>
      </div>

      <CompoundInterestCalculatorContent locale={locale} t={t} />
    </div>
  </div>
</BaseLayout>
