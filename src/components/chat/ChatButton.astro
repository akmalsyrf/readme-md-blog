---
import { getTranslations, type Locale } from '../../utils/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'id' } = Astro.props;
const t = getTranslations(locale);
---

<button id="chatbot-toggle" aria-label={t.chatbot.toggleLabel} class="chatbot-toggle-button">
  <svg
    id="chatbot-icon"
    class="chatbot-icon"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
    ></path>
  </svg>
</button>

<style>
  @keyframes smooth-jump {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  @keyframes glow-pulse {
    0%,
    100% {
      box-shadow:
        0 0 20px rgba(99, 102, 241, 0.5),
        0 0 40px rgba(99, 102, 241, 0.3),
        0 0 60px rgba(139, 92, 246, 0.2);
    }
    50% {
      box-shadow:
        0 0 30px rgba(99, 102, 241, 0.7),
        0 0 60px rgba(99, 102, 241, 0.5),
        0 0 90px rgba(139, 92, 246, 0.3);
    }
  }

  @keyframes glow-pulse-dark {
    0%,
    100% {
      box-shadow:
        0 0 20px rgba(129, 140, 248, 0.6),
        0 0 40px rgba(129, 140, 248, 0.4),
        0 0 60px rgba(167, 139, 250, 0.3);
    }
    50% {
      box-shadow:
        0 0 30px rgba(129, 140, 248, 0.8),
        0 0 60px rgba(129, 140, 248, 0.6),
        0 0 90px rgba(167, 139, 250, 0.4);
    }
  }

  .chatbot-toggle-button {
    @apply flex h-14 w-14 items-center justify-center rounded-full text-white transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-offset-2 dark:focus:ring-indigo-500;
    background: linear-gradient(
      135deg,
      rgb(99 102 241) 0%,
      rgb(79 70 229) 50%,
      rgb(139 92 246) 100%
    );
    animation:
      smooth-jump 2s ease-in-out infinite,
      glow-pulse 3s ease-in-out infinite;
    box-shadow:
      0 0 20px rgba(99, 102, 241, 0.5),
      0 0 40px rgba(99, 102, 241, 0.3),
      0 0 60px rgba(139, 92, 246, 0.2),
      0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .chatbot-toggle-button:hover {
    background: linear-gradient(
      135deg,
      rgb(79 70 229) 0%,
      rgb(99 102 241) 50%,
      rgb(124 58 237) 100%
    );
    box-shadow:
      0 0 30px rgba(99, 102, 241, 0.7),
      0 0 60px rgba(99, 102, 241, 0.5),
      0 0 90px rgba(139, 92, 246, 0.3),
      0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px) scale(1.05);
  }

  .dark .chatbot-toggle-button {
    background: linear-gradient(
      135deg,
      rgb(129 140 248) 0%,
      rgb(99 102 241) 50%,
      rgb(167 139 250) 100%
    );
    animation:
      smooth-jump 2s ease-in-out infinite,
      glow-pulse-dark 3s ease-in-out infinite;
    box-shadow:
      0 0 20px rgba(129, 140, 248, 0.6),
      0 0 40px rgba(129, 140, 248, 0.4),
      0 0 60px rgba(167, 139, 250, 0.3);
  }

  .dark .chatbot-toggle-button:hover {
    background: linear-gradient(
      135deg,
      rgb(99 102 241) 0%,
      rgb(129 140 248) 50%,
      rgb(196 181 253) 100%
    );
    box-shadow:
      0 0 30px rgba(129, 140, 248, 0.8),
      0 0 60px rgba(129, 140, 248, 0.6),
      0 0 90px rgba(167, 139, 250, 0.4),
      0 10px 15px -3px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px) scale(1.05);
  }

  .chatbot-icon {
    @apply h-6 w-6 transition-transform duration-300;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }

  .chatbot-icon.rotated {
    transform: rotate(180deg);
  }
</style>
