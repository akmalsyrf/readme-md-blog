---
interface Props {
  title: string;
  description: string;
  href: string;
  badgeText?: string;
  actionText: string;
}

const { title, description, href, badgeText, actionText } = Astro.props;
---

<a
  href={href}
  class="group relative flex flex-col rounded-lg border border-gray-200 bg-white p-6 transition-all duration-200 hover:border-purple-300 hover:shadow-lg dark:border-gray-700 dark:bg-gray-800 dark:hover:border-purple-600"
>
  <div class="mb-3 flex items-start justify-between">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">{title}</h3>
    {
      badgeText && (
        <span class="inline-flex items-center rounded-full bg-gradient-to-r from-purple-500 to-pink-500 px-2 py-0.5 text-xs font-semibold text-white shadow-sm">
          {badgeText}
        </span>
      )
    }
  </div>
  <p class="text-sm text-gray-600 dark:text-gray-400">{description}</p>
  <div
    class="mt-4 flex items-center text-sm font-medium text-purple-600 transition-colors group-hover:text-purple-700 dark:text-purple-400 dark:group-hover:text-purple-300"
  >
    <span>{actionText}</span>
    <svg
      class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
  </div>
</a>
