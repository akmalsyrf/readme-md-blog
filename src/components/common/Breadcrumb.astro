---
import { getLocalizedPath, type Locale } from '../../utils/i18n';

interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
  locale: Locale;
}

const { items, locale } = Astro.props;
---

<nav class="mb-6" aria-label="Breadcrumb">
  <ol class="flex flex-wrap items-center gap-2 text-sm">
    {
      items.map((item, index) => {
        const isLast = index === items.length - 1;

        return (
          <li class="flex items-center">
            {isLast ? (
              <span class="text-gray-600 dark:text-gray-400" aria-current="page">
                {item.label}
              </span>
            ) : (
              <>
                <a
                  href={item.href ? getLocalizedPath(item.href, locale) : '#'}
                  class="text-blue-600 hover:text-blue-800 hover:underline dark:text-blue-400 dark:hover:text-blue-300"
                >
                  {item.label}
                </a>
                <svg
                  class="mx-2 h-4 w-4 text-gray-400 dark:text-gray-500"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </>
            )}
          </li>
        );
      })
    }
  </ol>
</nav>
